#Gets the file to be used from the command line
asm_filename =str(sys.argv[1])print(asm_filename)

#Reads the asm file
text = open(asm_filename).read()

#Generates the hack filename
def get_hack_filename(asm_filename):
    return ''.join(asm_filename.split('.')[:-1]) + ".hack"

#Creates a hack file
hack_filename = get_hack_filename(asm_filename)
try:
   open(hack_filename, 'w')#write(hack_program)
